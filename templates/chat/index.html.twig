{% extends 'base.html.twig' %}

{% block title %}Hello ChatController!
{% endblock %}

{% block body %}
	<style>
		.container {
			background-color: dark;
			color: dark;
		}
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		.zeb {
			background-color: pink;
			border: 10px dashed purple;
			font-family: Comic Sans MS;
			text-shadow: 5px 5px 5px yellow;
		}

		.zeb22 {
			background-image: linear-gradient(135deg, magenta, lime, cyan);
			color: white;
			border: 3px solid yellow;
			text-transform: uppercase;
			text-decoration: line-through;
			font-size: 36px;
			padding: 20px;
			box-shadow: 0 0 10px black;
		}
		/* Effets supplémentaires pour encore plus de laideur */
		.zeb22:hover {
			transform: rotate(45deg);
			background-color: hotpink;
			color: purple;
			box-shadow: 0 0 20px pink;
		}

		.zeb22::before {
			color: yellow;
			font-size: 48px;
			position: absolute;
			top: -20px;
			left: -20px;
			text-shadow: 5px 5px 5px black;
		}
		body {
			background-color: lime;
			background-image: linear-gradient(90deg, red, blue);
			color: yellow;
			font-family: Impact, fantasy;
			text-transform: uppercase;
			text-shadow: 3px 3px 3px black;
			border: 10px dotted purple;
			padding: 20px;
			box-shadow: 0 0 50px pink;
		}

		.zeb22::after {
			color: red;
			font-size: 48px;
			position: absolute;
			bottom: -20px;
			right: -20px;
			text-shadow: 5px 5px 5px black;
		}

		form {
			background-color: hotpink;
			padding: 30px;
			border: 10px double lime;
			box-shadow: 0 0 50px magenta;
		}

		form input[type="text"],
		form input[type="password"],
		form input[type="email"] {
			background-color: yellow;
			border: 5px dotted blue;
			color: purple;
			font-family: "Comic Sans MS", cursive;
			padding: 15px;
			margin: 10px;
			text-transform: uppercase;
		}

		form textarea {
			background-color: cyan;
			border: 5px dashed red;
			color: green;
			font-family: Impact, fantasy;
			padding: 15px;
			margin: 10px;
		}

		form button[type="submit"] {
			background-color: red;
			color: yellow;
			border: 5px solid purple;
			padding: 15px 30px;
			text-transform: uppercase;
			font-weight: bold;
			font-family: "Courier New", monospace;
			cursor: pointer;
			margin: 20px;
		}

		/* Effets supplémentaires pour encore plus de laideur */
		form input[type="text"]:focus,
		form input[type="password"]:focus,
		form input[type="email"]:focus,
		form textarea:focus {
			transform: rotate(10deg);
			background-color: lime;
			border-color: pink;
			color: blue;
		}

		form button[type="submit"]:hover {
			transform: scale(1.3);
			background-color: purple;
			border-color: yellow;
			color: red;
			box-shadow: 0 0 30px black;
			text-shadow: 3px 3px 3px magenta;
		}
	</style>
	<script>
		document.body.style.cursor = 'url("/TPOpenAiCorrection/public/assets/cat.png"), auto';
	</script>

	{% for message in messages %}
		<div class="container">
			<p class="zeb22">
				{{ message.createdat.format('H:i') }}
			</p>
			<br>
			<p class="zeb">
				{{message.content}}
			</p>
			<br>

		{% endfor %}
		{{form_start(form)}}
		{{form_widget(form)}}
		<button type="submit">Send</button>
		<a href="{{ path('app_clear')}}" style="font-family: Impact, fantasy; font-size: 36px; color: red; text-decoration: underline; text-transform: uppercase; text-shadow: 3px 3px 3px black;">Effacer l'ensemble des messages</a>
		{{form_end(form)}}
	</div>
{% endblock %}
